   <!-- 常用控件标准样式 -->
    
    <!-- TextView样式 -->
    <style name="txtStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_common_color</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="txtCenterStyle" parent="txtStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:singleLine">true</item>
    </style>
     <!-- EditText样式 -->
    <style name="edtStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_common_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">@color/text_common_color</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
    </style>
    <!-- ImageView样式 -->
    <style name="imgStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/app_name</item>
        <item name="android:clickable">true</item>
    </style>
    <!-- Button样式 -->
    <style name="btnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_common_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        
    </style>
    <!-- ListView样式 -->
    <style name="listStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerPadding">0dip</item>
        <item name="android:listSelector">#00000000</item>
    </style>
	<!-- 弹出框 -->
	<style name="dialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="load_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>  
    </style>
   
	
    <!-- 常用控件标准样式结束 -->

</resources>
