<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/actionbar_root"
    android:clickable="true" 
    android:background="@color/action_bar"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:minHeight="58dip">
  
    <!-- <ImageView 
        android:id="@+id/title_imgv_bg" 
        android:background="@color/action_bar" 
        android:layout_width="fill_parent" 
        android:layout_height="48.0dip" 
        android:contentDescription="@string/app_name" /> -->
 
    <RelativeLayout 
        android:id="@+id/title_rlyt_left" 
        android:clickable="true" 
        android:layout_width="wrap_content" 
        android:layout_height="fill_parent">
        <ImageView 
            android:id="@+id/title_imgv_left_icon" 
            android:background="@drawable/selector_actionbar_bg"
            android:paddingLeft="10.0dip" 
            android:paddingRight="10.0dip"             
            android:layout_width="wrap_content" 
            android:layout_height="fill_parent" 
            android:src="@drawable/navi_back_icon" 
            android:layout_centerVertical="true" 
            android:visibility="gone"
            android:contentDescription="@string/app_name" />
        <TextView 
            android:id="@+id/title_txv_left_text"
            android:textSize="16.0dip" 
            android:background="@drawable/selector_actionbar_bg"
            android:gravity="center"              
            android:paddingLeft="15.0dip" 
            android:paddingRight="15.0dip" 
            android:visibility="gone" 
            android:textColor="@color/action_bar_txt"
            android:layout_width="wrap_content" 
            android:layout_height="fill_parent" 
            android:singleLine="true" />
    </RelativeLayout>
    <RelativeLayout 
        android:gravity="right" 
        android:id="@+id/title_rlyt_right" 
        android:clickable="true" 
        android:layout_width="wrap_content" 
        android:layout_height="fill_parent" 
        android:layout_alignParentRight="true">
        
        <ImageView 
            android:id="@+id/title_imgv_right_icon" 
            android:paddingLeft="10.0dip" 
            android:paddingRight="10.0dip"             
            android:layout_width="wrap_content" 
            android:layout_height="fill_parent"
            android:scaleType="centerInside"  
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/selector_actionbar_bg"
            android:contentDescription="@string/app_name" />
        <TextView 
            android:id="@+id/title_txv_right_text"
            android:textSize="16.0dip" 
            android:background="@drawable/selector_actionbar_bg"
            android:textColor="@color/action_bar_txt"
            android:gravity="center" 
            android:paddingLeft="15.0dip" 
            android:paddingRight="15.0dip" 
            android:visibility="gone"  
            android:clickable="true"
            android:layout_width="wrap_content" 
            android:layout_height="fill_parent" 
            android:singleLine="true" />
    </RelativeLayout>
    <LinearLayout 
        android:id="@+id/actionbar_title_layout"
        android:gravity="center" 
        android:orientation="vertical" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_marginLeft="60.0dip" 
        android:layout_marginRight="60.0dip" 
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/actionbar_title" 
            android:textSize="@dimen/text_size_large" 
            android:textColor="@color/action_bar_txt" 
            android:gravity="center" 
            android:layout_gravity="center_horizontal"              
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text="@string/app_name" 
            android:singleLine="true" />
        <TextView
            android:id="@+id/actionbar_subtitle" 
            android:textSize="@dimen/text_size_minimal" 
            android:textColor="@color/action_bar_txt"
            android:gravity="center" 
            android:visibility="gone"
            android:layout_gravity="center_horizontal" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:singleLine="true" />
        
        <!-- <ImageView 
            android:id="@+id/title_iv_title_little"
            android:gravity="center" 
            android:layout_gravity="center_horizontal"
            android:visibility="gone" 
            android:src="@drawable/down_arrow_titlebar"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" /> -->
        
        
    </LinearLayout>
</RelativeLayout>
